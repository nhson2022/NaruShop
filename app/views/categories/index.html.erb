<% if notice.present? %>
	<div class="alert alert-primary py-2">
		<%= notice %>
	</div>
<% end %>
<div class="row my-4">
	<div class="col-6">
		<h4>Categories</h4>
	</div>
	<div class="col-6 text-end">
		<%= link_to "New category", new_category_path, class: "btn btn-primary" %>
	</div>
</div>
<div class="row">
	<div class="col-4">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title text-primary">New category</h5>
				<%= render "form", category: @category %>
			</div>
		</div>
	</div>
	<div class="col-8 ">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Name</th>
          <th scope="col">Created</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
					<tr>
						<td><%= category.id %></td>
						<td><%= category.name %></td>
            <td><%= category.created_at.strftime("%d/%m/%Y") %></td>
						<td class="d-inline-flex">
							<%= link_to "Show", category, class: "btn btn-sm btn-info me-1" %>
							<%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-success me-1" %>
							<%= button_to "Delete", category, data: {turbo_method: "delete", turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-danger me-1" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
